@model src.Models.ViewModels.PessoaViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">

    <div class="form">
        <form asp-action="Create">
            <h4>Dados pessoais</h4>
            <hr />

            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-xs-3 col-md-3">
                    <label asp-for="Pessoa.Name" class="control-label"></label>
                    <input asp-for="Pessoa.Name" class="form-control" />
                    <span asp-validation-for="Pessoa.Name" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-3 col-md-3">
                    <label asp-for="Pessoa.LastName" class="control-label"></label>
                    <input asp-for="Pessoa.LastName" class="form-control" />
                    <span asp-validation-for="Pessoa.LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-3 col-md-3">
                    <label asp-for="Pessoa.BirthDate" class="control-label"></label>
                    <input asp-for="Pessoa.BirthDate" class="form-control" />
                    <span asp-validation-for="Pessoa.BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-3 col-md-3">
                    <label asp-for="Pessoa.Gender" class="control-label"></label>
                    <input asp-for="Pessoa.Gender" class="form-control" />
                    <span asp-validation-for="Pessoa.Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="">
                <h4>Endere√ßo</h4>
                <hr />
                <partial name="~/Views/Endereco/_Form.cshtml" />
                
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

</div>