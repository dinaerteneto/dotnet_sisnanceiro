@model src.ViewModels.PessoaViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            Dados pessoais
        </div>
        <div class="panel-body">
            <form asp-action="Create" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Pessoa.Nome" class="required control-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="Pessoa.Nome" class="form-control no-label" /> 
                        <span asp-validation-for="Pessoa.Nome" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Pessoa.Sobrenome" class="control-label"></label>
                    <input asp-for="Pessoa.Sobrenome" class="form-control" />
                    <span asp-validation-for="Pessoa.Sobrenome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Pessoa.DataNascimento" class="control-label"></label>
                    <input asp-for="Pessoa.DataNascimento" class="form-control" />
                    <span asp-validation-for="Pessoa.DataNascimento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Pessoa.Sexo" class="control-label"></label>
                    <input asp-for="Pessoa.Sexo" class="form-control" />
                    <span asp-validation-for="Pessoa.Sexo" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>